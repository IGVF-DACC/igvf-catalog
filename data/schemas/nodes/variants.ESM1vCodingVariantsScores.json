{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "schemas/nodes/variants.ESM1vCodingVariantsScores.json",
    "type": "object",
    "properties": {
        "_key": {
            "type": "string",
            "description": "Unique identifier for the variant",
            "example": "NC_000023.11:148501097:ATG:GCA"
        },
        "name": {
            "type": "string",
            "description": "Name for the variant",
            "example": "NC_000023.11:148501097:ATG:GCA"
        },
        "chr": {
            "type": "string",
            "description": "Chromosome for the variant",
            "example": "chr5"
        },
        "pos": {
            "type": "number",
            "description": "Position for the variant"
        },
        "ref": {
            "type": "string",
            "description": "Reference allele for the variant"
        },
        "alt": {
            "type": "string",
            "description": "Alternate allele for the variant"
        },
        "variation_type": {
            "type": "string",
            "description": "Variation type for the variant",
            "enum": ["SNP", "deletion-insertion"]
        },
        "spdi": {
            "type": "string",
            "description": "SPDI for the variant",
            "example": "NC_000023.11:148501097:ATG:GCA"
        },
        "hgvs": {
            "type": "string",
            "description": "HGVS for the variant",
            "example": "NC_000005.10:g.1779511G>C"
        },
        "organism": {
            "type": "string",
            "description": "Organism for the variant",
            "enum": ["Homo sapiens"]
        },
        "source": {
            "type": "string",
            "description": "Source for the variant",
            "enum": ["IGVF"]
        },
        "source_url": {
            "type": "string",
            "description": "Source URL for the variant",
            "example": "https://data.igvf.org/tabular-files/IGVFFI8105TNNO",
            "pattern": "^https://data.igvf.org/tabular-files/"
        }
    },
    "required": ["_key", "name", "chr", "pos", "ref", "alt", "variation_type", "spdi", "hgvs", "organism", "source", "source_url"],
    "additionalProperties": false
}
