{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "schemas/nodes/genomic_elements.base.json",
    "type": "object",
    "properties": {
        "_key": {
            "type": "string",
            "description": "Unique identifier for the genomic element"
        },
        "name": {
            "type": "string",
            "description": "Name of the genomic element"
        },
        "chr": {
            "type": "string",
            "description": "Chromosome of the genomic element",
            "example": "chr1",
            "pattern": "^chr"
        },
        "start": {
            "type": "number",
            "description": "Start position of the genomic element"
        },
        "end": {
            "type": "number",
            "description": "End position of the genomic element"
        },
        "source": {
            "type": "string",
            "description": "Source of the genomic element"
        },
        "source_url": {
            "type": "string",
            "description": "Source URL of the genomic element"
        },
        "type": {
            "type": "string",
            "description": "Type of the genomic element"
        },
        "method": {
            "type": "string",
            "description": "Method of the genomic element"
        }
    },
    "required": ["_key", "name", "chr", "start", "end", "source", "source_url", "type", "method"],
    "additionalProperties": false
}
