{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/nodes/motifs.Motif.json",
  "allOf": [
    {
      "$ref": "node.base.json"
    },
    {
      "$ref": "motifs.base.json"
    },
    {
      "type": "object",
      "properties": {
        "source": {
          "enum": [
            "HOCOMOCOv11"
          ]
        },
        "source_url": {
          "pattern": "^hocomoco11\\.autosome\\.org/motif/.*$",
          "example": "hocomoco11.autosome.org/motif/ATF1_HUMAN.H11MO.0.B"
        }
      },
      "additionalProperties": false,
      "accessible_via": {
        "name": "motifs",
        "return": "_id, name, tf_name, source, source_url, pwm, length"
      }
    }
  ],
  "db_collection_name": "motifs"
}
