{
  "$id": "schemas/nodes/ontology_terms.Ontology.json",
  "allOf": [
    {
      "$ref": "node.base.json"
    },
    {
      "type": "object",
      "properties": {
        "_key": {
          "example": "GO:0000001"
        },
        "uri": {
          "type": "string",
          "description": "The URI of the ontology term",
          "example": "http://purl.obolibrary.org/obo/GO_0000001"
        },
        "term_id": {
          "type": "string",
          "description": "The ID of the ontology term",
          "example": "GO:0000001"
        },
        "name": {
          "example": "positive regulation of positive chemotaxis to camp by chlorinated alkylphenone"
        },
        "description": {
          "type": "string",
          "description": "The description of the ontology term"
        },
        "synonyms": {
          "type": "array",
          "description": "The synonyms of the ontology term",
          "example": [
            "GO:0000001"
          ],
          "items": {
            "type": "string"
          }
        },
        "source": {
          "enum": [
            "BAO",
            "CHEBI",
            "CL",
            "CLO",
            "EFO",
            "ENCODE",
            "GO",
            "HPO",
            "MONDO",
            "NCIT",
            "OBA",
            "Oncotree",
            "ORPHANET",
            "UBERON",
            "VARIO"
          ]
        },
        "source_url": {
          "example": "https://geneontology.org/ontology/go"
        },
        "subontology": {
          "type": [
            "string",
            "null"
          ],
          "description": "The subontology of the GO ontology term",
          "enum": [
            "biological_process",
            "cellular_component",
            "molecular_function",
            null
          ]
        }
      },
      "required": [
        "uri",
        "term_id",
        "description",
        "synonyms",
        "subontology"
      ]
    }
  ],
  "additionalProperties": false,
  "accessible_via": {
    "return": "_id, uri, term_id, name, synonyms, description, source, subontology, source_url"
  },
  "db_collection_name": "ontology_terms"
}
