{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "schemas/nodes/genomic_elements.EncodeElementGeneLink.json",
    "allOf": [
        {
            "$ref": "node.base.json"
        },
        {
            "$ref": "genomic_elements.base.json"
        },
        {
            "type": "object",
            "properties": {
                "_key": {
                    "example": "genic_chr1_869658_870158_GRCh38_ENCFF003BKC"
                },
                "name": {
                    "example": "genic_chr1_869658_870158_GRCh38_ENCFF003BKC"
                },
                "method": {
                    "example": "element gene regulatory interaction predictions using Distal regulation ENCODE-rE2G"
                },
                "type": {
                    "enum": [
                        "accessible dna elements"
                    ]
                },
                "source_annotation": {
                    "type": "string",
                    "description": "Source annotation for the genomic element",
                    "example": "genic"
                },
                "source": {
                    "enum": [
                        "ENCODE"
                    ]
                },
                "source_url": {
                    "example": "https://www.encodeproject.org/files/ENCFF003BKC/",
                    "pattern": "^https://www.encodeproject.org/files/"
                },
                "files_filesets": {
                    "type": "string",
                    "description": "Filesets for the genomic element",
                    "example": "files_filesets/ENCFF003BKC",
                    "pattern": "^files_filesets/"
                },
                "simple_sample_summaries": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "description": "Simple sample summaries for the genomic element",
                    "example": [
                        "head of caudate nucleus from ENCDO948PMW"
                    ]
                },
                "treatments_term_ids": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "description": "Treatments term ids for the genomic element",
                    "example": [
                        "UniProtKB:P05112"
                    ]
                }
            },
            "required": [
                "source_annotation",
                "files_filesets",
                "simple_sample_summaries",
                "treatments_term_ids"
            ],
            "additionalProperties": false
        }
    ]
}
