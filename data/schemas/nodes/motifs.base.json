{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "schemas/nodes/motifs.base.json",
  "type": "object",
  "properties": {
    "tf_name": {
      "type": "string",
      "description": "The name of the TF"
    },
    "pwm": {
      "type": "array",
      "description": "The PWM of the motif",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "length": {
      "type": "number",
      "description": "The length of the motif"
    }
  },
  "required": [
    "tf_name",
    "pwm",
    "length"
  ]
}
