{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "schemas/nodes/ontology_terms.Oncotree.json",
  "allOf": [
    {
      "$ref": "node.base.json"
    },
    {
      "type": "object",
      "properties": {
        "_key": {
          "example": "Oncotree_0_0"
        },
        "name": {
          "example": "0_0"
        },
        "uri": {
          "type": "string",
          "description": "The URI of the ontology term",
          "example": "https://oncotree.mskcc.org/api/tumorTypes/0_0"
        },
        "term_id": {
          "type": "string",
          "description": "The ID of the ontology term",
          "example": "0_0"
        },
        "source": {
          "enum": [
            "Oncotree"
          ]
        },
        "source_url": {
          "enum": [
            "https://oncotree.mskcc.org/api/tumorTypes"
          ]
        }
      },
      "required": [
        "uri",
        "term_id"
      ],
      "additionalProperties": false
    }
  ]
}
