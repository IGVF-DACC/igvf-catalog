{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "edge.base.json",
    "title": "Edge Node Schema",
    "description": "Base schema for all edge types in the IGVF Catalog. Defines common required properties.",
    "type": "object",
    "properties": {
      "_from": {
        "type": "string",
        "description": "Unique identifier for the source node"
      },
      "_to": {
        "type": "string",
        "description": "Unique identifier for the target node"
      },
      "label": {
        "type": "string",
        "description": "Label for the edge"
      },
      "class": {
        "type": "string",
        "description": "Class for the edge"
      },
      "method": {
        "type": "string",
        "description": "Method for the edge"
      },
      "name": {
        "type": "string",
        "description": "Name for the edge"
      },
      "inverse_name": {
        "type": "string",
        "description": "Inverse name for the edge"
      },
      "source": {
        "type": "string",
        "description": "Data source of the edge"
      },
      "source_url": {
        "type": "string",
        "description": "Source URL of the edge"
      }
    },
    "required": [
      "_from",
      "_to",
      "label",
      "class",
      "method",
      "name",
      "inverse_name",
      "source",
      "source_url"
    ],
    "additionalProperties": false
  }
