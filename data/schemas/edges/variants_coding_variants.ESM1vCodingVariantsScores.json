{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "schemas/edges/variants_coding_variants.ESM1vCodingVariantsScores.json",
    "type": "object",
    "properties": {
        "_key": {
            "type": "string",
            "description": "Unique identifier for the variant-coding variant edge"
        },
        "_from": {
            "type": "string",
            "description": "Source for the variant-coding variant edge",
            "example": "variants/NC_000001.11:10202:C:A",
            "pattern": "^variants/",
            "collections": ["variants"]
        },
        "_to": {
            "type": "string",
            "description": "Target for the variant-coding variant edge",
            "example": "coding_variants/OR4F5_ENST00000641515_p.Met1!_c.1A-C",
            "pattern": "^coding_variants/",
            "collections": ["coding_variants"]
        },
        "name": {
            "type": "string",
            "description": "Name for the variant-coding variant edge",
            "enum": ["codes for"]
        },
        "inverse_name": {
            "type": "string",
            "description": "Inverse name for the variant-coding variant edge",
            "enum": ["encoded by"]
        },
        "chr": {
            "type": "string",
            "description": "Chromosome for the variant-coding variant edge",
            "example": "chr18"
        },
        "pos": {
            "type": "integer",
            "description": "Position for the variant-coding variant edge"
        },
        "ref": {
            "type": "string",
            "description": "Reference allele for the variant-coding variant edge",
            "example": "CA"
        },
        "alt": {
            "type": "string",
            "description": "Alternate allele for the variant-coding variant edge",
            "example": "AC"
        },
        "source": {
            "type": "string",
            "description": "Source for the variant-coding variant edge",
            "enum": ["IGVF"]
        },
        "source_url": {
            "type": "string",
            "description": "Source URL for the variant-coding variant edge",
            "example": "https://data.igvf.org/tabular-files/IGVFFI8105TNNO",
            "pattern": "^https://data.igvf.org/tabular-files/"
        }
    },
    "required": ["_key", "_from", "_to", "name", "inverse_name", "chr", "pos", "ref", "alt", "source", "source_url"],
    "additionalProperties": false
}
